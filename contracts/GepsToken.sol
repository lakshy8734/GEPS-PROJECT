contract GEPSToken is ERC20, Ownable {
    uint256 private constant INITIAL_SUPPLY = 50000000 * 10 ** 18; // 50,000,000 GEPS with 18 decimals
    uint256 private constant TAX_PERCENT = 2;

    address public presaleAddress;
    address public rndAddress;
    address public marketingAddress;
    address public treasuryAddress;
    address public teamAddress;
    address public partnershipAddress;
    address public liquidityAddress;
    address public charityAddress;
    address public reserveAddress;
    bool public minted = false;

    constructor(
        address _presaleAddress,
        address _rndAddress,
        address _marketingAddress,
        address _treasuryAddress,
        address _teamAddress,
        address _partnershipAddress,
        address _liquidityAddress,
        address _charityAddress,
        address _reserveAddress
    ) ERC20("GEPS", "GEPS") Ownable(msg.sender) {
        presaleAddress = _presaleAddress;
        rndAddress = _rndAddress;
        marketingAddress = _marketingAddress;
        treasuryAddress = _treasuryAddress;
        teamAddress = _teamAddress;
        partnershipAddress = _partnershipAddress;
        liquidityAddress = _liquidityAddress;
        charityAddress = _charityAddress;
        reserveAddress = _reserveAddress;
    }

    function mint() external onlyOwner {
        require(!minted, "Tokens have already been minted");
        minted = true;
        _mint(presaleAddress, 20000000 * 10 ** 18); // 40%
        _mint(rndAddress, 2500000 * 10 ** 18); // 5%
        _mint(marketingAddress, 2500000 * 10 ** 18); // 5%
        _mint(treasuryAddress, 5000000 * 10 ** 18); // 10%
        _mint(teamAddress, 5000000 * 10 ** 18); // 10%
        _mint(partnershipAddress, 2500000 * 10 ** 18); // 5%
        _mint(liquidityAddress, 5000000 * 10 ** 18); // 10%
        _mint(charityAddress, 2500000 * 10 ** 18); // 5%
        _mint(reserveAddress, 5000000 * 10 ** 18); // 10%
    }

    function _transfer(
        address sender,
        address recipient,
        uint256 amount
    ) internal virtual override {
        if (sender == owner() || recipient == owner()) {
            // If the sender or recipient is the owner, transfer without tax
            super._transfer(sender, recipient, amount);
        } else {
            // Otherwise, apply the tax
            uint256 taxAmount = (amount * TAX_PERCENT) / 100;
            uint256 transferAmount = amount - taxAmount;

            // Ensure the tax amount is properly split
            uint256 halfTax = taxAmount / 2;
            uint256 remainingTax = taxAmount - halfTax; // This handles any rounding issues

            // Perform the transfers
            super._transfer(sender, treasuryAddress, halfTax);
            super._transfer(sender, charityAddress, remainingTax);
            super._transfer(sender, recipient, transferAmount);
        }
    }

}
